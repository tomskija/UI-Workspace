# Weather Forecasting UI Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL - Update this to match your Weather-Forcasting backend deployment
NEXT_PUBLIC_API_URL=http://localhost:8000

# Alternative backend URLs for different environments:
# Local development: http://localhost:8000
# Production: https://your-backend-domain.herokuapp.com
# Staging: https://staging-api.your-domain.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application environment
NEXT_PUBLIC_APP_ENV=development

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Default location for weather display
NEXT_PUBLIC_DEFAULT_LOCATION=New York

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_WEATHER_ALERTS=true
NEXT_PUBLIC_ENABLE_FORECAST_CHARTS=true
NEXT_PUBLIC_ENABLE_HISTORICAL_DATA=true
NEXT_PUBLIC_ENABLE_LOCATION_SEARCH=true

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Google Analytics (if you want to track usage)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry for error tracking (recommended for production)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development mode settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API_RESPONSES=false

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================
# Vercel deployment
# VERCEL_URL will be automatically set by Vercel

# Netlify deployment
# URL will be automatically set by Netlify

# Custom domain (set this for production)
# NEXT_PUBLIC_SITE_URL=https://weather-app.your-domain.com