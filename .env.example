# UI Workspace Environment Variables - Multi-Backend Configuration
# Copy this file to .env.local and configure your backend endpoints

# =============================================================================
# WORKSPACE CONFIGURATION
# =============================================================================
# Main workspace settings
NEXT_PUBLIC_WORKSPACE_NAME=UI-Workspace
NEXT_PUBLIC_WORKSPACE_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# Default workspace view
NEXT_PUBLIC_DEFAULT_WORKSPACE=weather
NEXT_PUBLIC_ENABLE_MULTI_BACKEND=true

# =============================================================================
# BACKEND API ENDPOINTS
# =============================================================================
# Weather Forecasting Backend (Primary example)
NEXT_PUBLIC_WEATHER_API_URL=http://localhost:8000
NEXT_PUBLIC_WEATHER_API_NAME=Weather-Forecasting
NEXT_PUBLIC_WEATHER_API_VERSION=v1

# Future Backend Examples (uncomment when adding new backends)
# Financial Analysis Backend
# NEXT_PUBLIC_FINANCE_API_URL=http://localhost:8001
# NEXT_PUBLIC_FINANCE_API_NAME=Financial-Analysis
# NEXT_PUBLIC_FINANCE_API_VERSION=v1

# ML/AI Processing Backend
# NEXT_PUBLIC_ML_API_URL=http://localhost:8002
# NEXT_PUBLIC_ML_API_NAME=ML-Processing
# NEXT_PUBLIC_ML_API_VERSION=v1

# Data Analytics Backend
# NEXT_PUBLIC_ANALYTICS_API_URL=http://localhost:8003
# NEXT_PUBLIC_ANALYTICS_API_NAME=Data-Analytics
# NEXT_PUBLIC_ANALYTICS_API_VERSION=v1

# =============================================================================
# PRODUCTION BACKEND ENDPOINTS
# =============================================================================
# Production URLs (uncomment for production deployment)
# NEXT_PUBLIC_WEATHER_API_URL=https://weather-api.tomskija.dev
# NEXT_PUBLIC_FINANCE_API_URL=https://finance-api.tomskija.dev
# NEXT_PUBLIC_ML_API_URL=https://ml-api.tomskija.dev
# NEXT_PUBLIC_ANALYTICS_API_URL=https://analytics-api.tomskija.dev

# =============================================================================
# WORKSPACE FEATURES
# =============================================================================
# Enable/disable workspace modules
NEXT_PUBLIC_ENABLE_WEATHER_MODULE=true
NEXT_PUBLIC_ENABLE_FINANCE_MODULE=false
NEXT_PUBLIC_ENABLE_ML_MODULE=false
NEXT_PUBLIC_ENABLE_ANALYTICS_MODULE=false

# Feature flags for shared functionality
NEXT_PUBLIC_ENABLE_CROSS_MODULE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SHARED_CALCULATIONS=true
NEXT_PUBLIC_ENABLE_MODULE_COMMUNICATION=true

# =============================================================================
# SHARED API CONFIGURATION
# =============================================================================
# Timeout settings (applies to all backends)
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_COUNT=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Authentication (if backends require auth)
# NEXT_PUBLIC_ENABLE_AUTH=false
# NEXT_PUBLIC_AUTH_PROVIDER=none

# =============================================================================
# WORKSPACE-SPECIFIC SETTINGS
# =============================================================================
# Weather module settings
NEXT_PUBLIC_WEATHER_DEFAULT_LOCATION=New York
NEXT_PUBLIC_WEATHER_ENABLE_ALERTS=true
NEXT_PUBLIC_WEATHER_ENABLE_FORECASTS=true
NEXT_PUBLIC_WEATHER_ENABLE_HISTORY=true

# Finance module settings (for future use)
# NEXT_PUBLIC_FINANCE_DEFAULT_CURRENCY=USD
# NEXT_PUBLIC_FINANCE_ENABLE_REALTIME=true
# NEXT_PUBLIC_FINANCE_ENABLE_PORTFOLIO=true

# ML module settings (for future use)
# NEXT_PUBLIC_ML_DEFAULT_MODEL=regression
# NEXT_PUBLIC_ML_ENABLE_TRAINING=true
# NEXT_PUBLIC_ML_ENABLE_INFERENCE=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Debug settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_DEBUG_API_CALLS=true
NEXT_PUBLIC_MOCK_BACKENDS=false

# Development tools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_SHOW_BACKEND_STATUS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Usage analytics (if you want to track workspace usage)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Performance monitoring
# NEXT_PUBLIC_ENABLE_LIGHTHOUSE_CI=false
# NEXT_PUBLIC_ENABLE_WEB_VITALS=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Site configuration
NEXT_PUBLIC_SITE_NAME=UI-Workspace
NEXT_PUBLIC_SITE_DESCRIPTION=Generic UI workspace for multiple Python backend services
# NEXT_PUBLIC_SITE_URL=https://ui-workspace.tomskija.dev

# Build configuration
NEXT_PUBLIC_BUILD_TARGET=multi-backend
NEXT_PUBLIC_OUTPUT_MODE=standalone

# CDN and assets
# NEXT_PUBLIC_CDN_URL=https://cdn.tomskija.dev
# NEXT_PUBLIC_STATIC_EXPORT=false